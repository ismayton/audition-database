<div class="content shadow">
    <h2>Log In</h2>

    <%= form_for(:user) do |f| %>
        <%= f.label "Username" %>
        <%= f.text_field :username %><br>

        <%= f.label "Password" %>
        <%= f.password_field :password %><br>
        
        <%= f.submit "Log In" %>
    <% end %>
</div>