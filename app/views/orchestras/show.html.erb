<h1><%= @orchestra.name %></h1>

<div class="content shadow">
    <h4>Auditions:</h4>
    <ul>
        <% @orchestra.lists.each do |l| %>
            <li><%= link_to "#{l.position.title}", list_path(l) %> - <%= display_date(l) %></li> 
        <% end %>
    </ul>
</div>


<% if @current_admin %>
    <div class="content admin">
        <%= button_to "Edit Orchestra", edit_orchestra_path, method: :get %><br> 
        <%= button_to "Delete Orchestra", orchestra_path, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
<% end %>
