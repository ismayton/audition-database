<h1><%= @position.title %></h1>

<div class="content shadow">
    <h4>Auditions:</h4>
    <ul>
        <% @position.lists.each do |l| %>
            <li><%= link_to "#{l.orchestra.name}", list_path(l) %> - <%= display_date(l) %></li> 
        <% end %>
    </ul>
</div>

<% if @current_admin %>
    <div class="content admin">
    <%= button_to "Edit Position", edit_position_path, method: :get %><br> 
    <%= button_to "Delete Position", position_path, method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
<% end %>