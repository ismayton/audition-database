<% @positions.each do |t| %>
    <div class="content shadow">
        <h2><%= link_to "#{t.title}", position_path(t) %></h2>
        
        <% if !t.lists.empty? %>
            <% t.lists.each do |l| %>
                <h4><%= l.orchestra.name %></h4>
                <li><%= link_to "#{ display_date(l)}", list_path(l) %></li>
            <% end %>
        <% end %>

    </div>
<% end %>

<% if admin? %>
    <div class="content admin">
        <%= button_to "New Position", new_position_path, method: :get %><br> 
    </div>
<% end %>
