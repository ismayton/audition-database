<!DOCTYPE html>
<html>
  <head id="hd">
    <title>Audition Archive</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <h1 id="header">Welcome to the Audition Archive!</h1>

    

  <body>

    <div class="topnav">
      <%= render 'layouts/user' %>
    </div>
    
      <div id="main">
        <div class="column left"> 

          <div class="content shadow nav">
            <%= render 'layouts/instruments' %>
          </div>

          <div class="content shadow">
            <h3>Admin Menu</h3>
            <%= link_to "New List", new_list_path %><br>
            <%= link_to "Library", '/library' %><br>
          </div>
        </div>

        <div class="column right">
          <% flash.each do |type, msg| %>
            <div class="error">
              <%= msg %>
            </div>
          <% end %>

          <%= yield %>
        </div>

  </div>
  </body>

  <footer>
  </footer>
</html>
